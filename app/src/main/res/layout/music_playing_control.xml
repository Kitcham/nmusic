<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/play_button"
        android:id="@+id/music_playing_control_playmode"

        android:src="@drawable/ic_repeat"/>

    <ImageButton
        android:id="@+id/music_playing_control_pre"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/play_button"

        android:src="@drawable/ic_previous"/>

    <ImageButton
        android:id="@+id/music_playing_control_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/play_button"

        android:src="@drawable/ic_play_b"/>

    <ImageButton
        android:id="@+id/music_playing_control_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:background="@drawable/play_button"
        android:src="@drawable/ic_next"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/play_button"
        android:id="@+id/music_playing_control_playinglist"

        android:src="@drawable/ic_playlist"
        />


</LinearLayout>